{
  "name": "mpc-pulse-app",
  "homepage": "https://tpellegrin.github.io/mpc-pulse-app/",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite --host localhost --port 3000 --open",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prepare": "husky install",
    "lint:staged": "pnpm lint-staged",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --config .eslintrc.cjs",
    "lint:css": "stylelint './src/**/styles.{ts,tsx}'",
    "i18n:check": "node scripts/i18n-check.cjs",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "pnpm prettier --write",
    "format:check": "pnpm prettier --list-different",
    "test": "vitest",
    "test:run": "vitest run",
    "test:cov": "vitest run --coverage",
    "validate": "pnpm lint && pnpm i18n:check && pnpm test:cov"
  },
  "dependencies": {
    "@capacitor/core": "^7.4.4",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@types/react-transition-group": "^4.4.12",
    "lottie-web": "^5.12.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-query": "^3.39.3",
    "react-router": "^7.8.2",
    "react-router-dom": "^7.8.2",
    "react-transition-group": "^4.4.5",
    "styled-components": "^6.1.19",
    "styled-normalize": "^8.1.1",
    "three": "^0.182.0",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-transition-group": "^4.4.12",
    "@types/styled-components": "^5.1.34",
    "@types/three": "^0.182.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.3",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.1.5",
    "postcss-lit": "^1.2.0",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^7.0.0",
    "stylelint-use-logical": "^2.1.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
